<h1> Alterando um Cliente </h1>

<%= form_for @customer do |f| %>
  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>

  <%= f.label :email, "Email" %>
  <%= f.text_field :email %>

  <%= f.label :phone, "Phone" %>
  <%= f.text_field :phone %>

  <%= f.label :avatar, "Avatar" %>
  <%= f.file_field :avatar %>

  <%= f.label :smoker, "Smoker" %> </br>
  <% { 'Y': 'Yes', 'N': 'No' }.each do |key, value| %>
    <%= f.radio_button :smoker, key %> <%= value %> </br>
  <% end %>

  <%= f.submit "Atualizar Cliente" %>

<% end %>